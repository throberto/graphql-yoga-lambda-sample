{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES6",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
  ]
}